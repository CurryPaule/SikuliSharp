<Window x:Class="SikuliSharp.TestApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sikuli Test Application" Height="350" Width="525"
        KeyDown="MainWindow_OnKeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Width="200" Height="30" Name="TestButton" Click="TestButton_OnClick">Test Button</Button>
        <Label Grid.Row="1" Width="200" Height="30" Name="StateLabel" Background="Red" Foreground="White" BorderBrush="Black" BorderThickness="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">Not Clicked</Label>
    </Grid>
</Window>
